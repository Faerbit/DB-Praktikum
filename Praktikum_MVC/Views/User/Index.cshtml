@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Benutzerübersicht";

    <div class="container">
        @if (Request.QueryString["success"] == "true")
        {
            <div class="alert alert-success">Benutzer erfolgreich gespeichert!</div>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>Benutzername</th>
                    <th>Vorname</th>
                    <th>Nachname</th>
                    <th>E-mail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Praktikum_MVC.Models.User user in ViewBag.users)
                {
                    <tr>
                        <td>@user.username</td>
                        <td>@user.vorname</td>
                        <td>@user.nachname</td>
                        <td>@user.email</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pull-right">
            <a href="@Url.Action("NewUser", "User")" class="btn btn-default">Neuen Studenten anlegen</a>
        </div>
    </div>
}


