
@{
    ViewBag.Title = "Neue Diskussion anlegen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Neue Diskussion anlegen</h2>
<form method="post" action="@Url.Action("NewDiscussion", "Foren", new { id = ViewBag.ID })">
    <div class="form-group">
        <label for="user">Benutzer:</label>
        <input type="text" class="form-control" id="user" value="@Session["authenticated"]" disabled></input>
        <label for="title">Titel:</label>
        <input type="text" class="form-control" name="title" id="title"></input>
        <label for="text-area">Erster Beitrag:</label>
        <textarea class="form-control" rows="5" name="content" id="text-area"></textarea>
        <button type="submit" class="btn btn-default">Absenden</button>
    </div>
</form>
