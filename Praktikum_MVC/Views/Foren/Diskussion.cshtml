@model Praktikum_MVC.Models.Diskussionen

@{
    ViewBag.Title = "Diskussion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Diskussion.Titel</h2>
    </div>
    <div class="col-md-6" style="font-size:large">
        <p class="pull-right">Anzahl Sichtungen: <span class="badge">@ViewBag.Diskussion.AnzahlSichtungen</span> </p>
    </div>
</div>

<div class="row container">
    @foreach (Praktikum_MVC.Models.Beiträge beitrag in ViewBag.Beitraege) {
    <div class="panel panel-default">
        <div class="panel-body">
            @beitrag.Mitteilung
        </div>
        <div class="panel-footer">Verfasst von <i>@beitrag.Benutzer</i> am @beitrag.Änderungsdatum</div>
    </div>
    }
</div>
<form method="post" action="@Url.Action("NewPost", "Foren", new { id = ViewBag.Diskussion.ID })" >
    <div class="form-group">
        <label for="text-area">Neuen Beitrag verfassen:</label>
        <textarea class="form-control" rows="5" name="Mitteilung" id="text-area"></textarea>
        <button type="submit" class="btn btn-default">Absenden</button>
    </div>
</form>